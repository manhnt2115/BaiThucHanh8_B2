@model BTH8_BT2.Models.SACH
@{
    ViewBag.Title = "Sửa thông tin sách";
}

<h2>Sửa thông tin sách</h2>

@using (Html.BeginForm("Edit", "Sach", FormMethod.Post))
{
    @Html.HiddenFor(m => m.MASACH)

    <div class="form-group">
        <label>Tên sách</label>
        @Html.TextBoxFor(m => m.TENSACH, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Giá bán</label>
        @Html.TextBoxFor(m => m.GIABAN, new { @class = "form-control", type = "number", step = "0.01" })
    </div>

    <div class="form-group">
        <label>Mô tả</label>
        @Html.TextAreaFor(m => m.MOTA, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Ảnh bìa</label>
        @Html.TextBoxFor(m => m.ANHBIA, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Ngày xuất bản</label>
        @Html.TextBoxFor(m => m.NGAYCAPNHAT, new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        <label>Số lượng tồn</label>
        @Html.TextBoxFor(m => m.SOLUONGTON, new { @class = "form-control", type = "number" })
    </div>

    <div class="form-group">
        <label>Chủ đề</label>
        @Html.DropDownList("MaCD", null, "-- Chọn chủ đề --", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
}
